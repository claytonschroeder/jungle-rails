<dt>User</dt>
<dd>
<%= review.user.name %>
</dd>

<dt>Description</dt>
<dd>
<%= review.description %>
</dd>

<dt>Rating: </dt>
<dd>
<%= review.rating %>
</dd>
  <% if current_user && current_user.id == review.user.id %>
    <dd><%= button_to 'Delete Review', [review.product, review],
      method: :delete,
      data: { confirm: 'Are you sure?' } %></dd>
  <% end %>
      <br>
